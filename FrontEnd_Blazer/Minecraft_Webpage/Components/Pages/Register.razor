@page "/Account/Register"
@using System.ComponentModel.DataAnnotations
@using Minecraft_Webpage.Data
@rendermode InteractiveServer
@inject NavigationManager NavigationManager
@inject HttpClient HttpClient

<h1>Register</h1>

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-danger">@Message</div>
}

<EditForm Model="Input" OnValidSubmit="RegisterUser" FormName="Register">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-floating mb-3">
        <InputText @bind-Value="Input.Username" id="username" class="form-control" placeholder="Username" />
        <label for="username">Username</label>
        <ValidationMessage For="() => Input.Username" />
    </div>

    <div class="form-floating mb-3">
        <InputText @bind-Value="Input.Password" id="password" type="password" class="form-control" placeholder="Password" />
        <label for="password">Password</label>
        <ValidationMessage For="() => Input.Password" />
    </div>

    <div class="form-floating mb-3">
        <InputText @bind-Value="Input.MinecraftUsername" id="minecraftUsername" class="form-control" placeholder="Minecraft Username" />
        <label for="minecraftUsername">Minecraft Username</label>
        <ValidationMessage For="() => Input.MinecraftUsername" />
    </div>

    <!-- REMOVED @onclick, kept only type="submit" -->
    <button type="submit" class="btn btn-primary w-100">Register</button>
</EditForm>

@code {
    private string? Message;

    [SupplyParameterFromForm]
    private InputModel Input { get; set; } = new();

    private async Task RegisterUser()
    {
        try
        {
            Console.WriteLine($"Registering: Username={Input.Username}, MC={Input.MinecraftUsername}");

            var response = await HttpClient.PostAsJsonAsync("signup", new
            {
                username = Input.Username?.Trim(),
                password = Input.Password,
                mcUsername = Input.MinecraftUsername?.Trim()
            });

            if (!response.IsSuccessStatusCode)
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                Console.WriteLine($"Error details: {errorContent}");
                Message = $"Registration failed: {errorContent}";
                return;
            }

            Message = "Registration successful!";
            await Task.Delay(1000); // Brief delay to show success message
            NavigationManager.NavigateTo("/Account/Login");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Exception: {ex}");
            Message = $"An error occurred: {ex.Message}";
        }
    }

    public class InputModel
    {
        [Required]
        [StringLength(50, MinimumLength = 3)]
        public string Username { get; set; } = "";

        [Required]
        [StringLength(100, MinimumLength = 6)]
        [DataType(DataType.Password)]
        public string Password { get; set; } = "";

        [Required]
        [StringLength(50, MinimumLength = 3)]
        public string MinecraftUsername { get; set; } = "";
    }
}